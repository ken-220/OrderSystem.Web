@{
    ViewBag.Title = "ログイン";
    Layout = "~/Views/Shared/_Layout.cshtml"; // レイアウトが無ければ消してOK
}

<h2 class="text-center mt-5">ログイン</h2>

<div class="container mt-4" style="max-width: 400px;">
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label>ユーザー名</label>
            @Html.TextBox("name", null, new { @class = "form-control", placeholder = "ユーザー名" })
        </div>

        <div class="form-group mb-3">
            <label>パスワード</label>
            @Html.Password("password", null, new { @class = "form-control", placeholder = "パスワード" })
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <button type="submit" class="btn btn-primary w-100 mt-3">ログイン</button>
    }
</div>


