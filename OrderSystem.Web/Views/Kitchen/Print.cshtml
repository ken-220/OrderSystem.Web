@model OrderSystem.Web.ViewModels.KitchenPrintViewModel
@{
    Layout = null; // レイアウト不要（印刷用）
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>厨房伝票</title>

    <style>
        body {
            font-family: 'メイリオ', sans-serif;
            padding: 10px;
            width: 80mm; /* レシート幅 */
        }

        .title {
            text-align: center;
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .no {
            text-align: center;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .line {
            border-bottom: 1px dashed #000;
            margin: 10px 0;
        }

        .item {
            margin-bottom: 10px;
            font-size: 15px;
        }

        .opt {
            font-size: 13px;
            margin-left: 12px;
        }

        .footer {
            margin-top: 10px;
            font-size: 14px;
        }
    </style>

    <script>
        // ページが開いたら自動印刷
        window.onload = function () {
            window.print();
        };
    </script>
</head>

<body>

    <div class="title">【厨房伝票】</div>

    <!-- ★ 伝票番号を表示（OrderId） -->
    <div class="no">No. @Model.OrderId.ToString("D5")</div>

    <div>テーブル：@Model.TableName</div>
    <div>注文時刻：@Model.OrderTime.ToString("HH:mm")</div>
    <div>印刷時刻：@DateTime.Now.ToString("HH:mm")</div>

    <div class="line"></div>

    @foreach (var item in Model.Items)
    {
        <div class="item">
            <strong>[@item.OrderIndex] @item.MenuName × @item.Quantity</strong>

            @if (item.Options.Any())
            {
                foreach (var opt in item.Options)
                {
                    <div class="opt">・@opt.OptionName @(opt.ExtraPrice > 0 ? "(+" + opt.ExtraPrice + "円)" : "")</div>
                }
            }
        </div>
    }

    <div class="line"></div>

    <div class="footer">
        品目合計：@Model.Items.Count()
    </div>

</body>
</html>

